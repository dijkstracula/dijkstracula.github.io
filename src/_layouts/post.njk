---
layout: base.njk
---

<article>
  <header>
    <h1>{{ title }}</h1>
    <div class="post-meta">
      <time class="post-date" datetime="{{ date | isoDate }}">
        {{ date | readableDate }}
      </time>
      {% if tags %}
      <span> &middot; </span>
      {% for tag in tags %}
        {% if tag != "post" %}
          <a href="/tags/{{ tag | slugify }}/" class="tag">#{{ tag }}</a>
        {% endif %}
      {% endfor %}
      {% endif %}
    </div>
  </header>

  {{ content | safe }}
</article>
